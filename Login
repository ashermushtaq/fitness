<script>
		$("#loginstart").click(function(e) {
	  
		  console.log("clicked");
		  var un = $("#usernameLogin").val();
	      var pw = $("#passwordLogin").val();
		  console.log(un);
		  console.log(pw);
			$.post( "/login", { usernameLogin: un, passwordLogin:pw })
	  
			.done(function( data ) {
	  
				 alert( "Data Loaded: " + data );
	   
			 // redirection to the customer page.
			 if(data == 'Customer')
			 {
	         $.mobile.changePage( "#customer",{
				transition: "pop",
	  
					reverse: false,
	  
					changeHash: false
	  
			  });
			}

			 // redirection to the manager page.
			 if(data == 'Manager')
			 {
	         $.mobile.changePage( "#manager",{
				transition: "pop",
	  
					reverse: false,
	  
					changeHash: false
	  
			  });
			}
			 // redirection to the manager page.
			 if(data == 'Cook')
			 {
	         $.mobile.changePage( "#cook",{
				transition: "pop",
	  
					reverse: false,
	  
					changeHash: false
	  
			  });
			}
		 });
	  
		});
	 
  
  
    });
    
    
    // add the item to the cart
    myCart.push(item + '-' + qty);
    $('#myitems').html(myCart) 
    alert(myCart);

}





</script>

